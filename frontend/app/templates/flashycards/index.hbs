<h1>Flashycards list</h1>

<p>
  {{link-to "New Flashycard" "flashycards.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Term
        </th>
        <th>
          Definition
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |flashycard|}}
        <tr>
          <td>
            {{flashycard.term}}
          </td>
          <td>
            {{flashycard.definition}}
          </td>
          <td>
            {{link-to "Edit" "flashycards.edit" flashycard}}
          </td>
          <td>
            {{link-to "Show" "flashycards.show" flashycard}}
          </td>
          <td>
            <a href="#" {{action "remove" flashycard}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Flashycards found
  </p>
{{/if}}
